# Flask configuration
FLASK_SECRET_KEY=<random-32-byte-secret-for-sessions>
FLASK_DEBUG=false

# Token decryption key (32-byte key, base64 encoded)
# This must match the key used by the CTF platform to generate tokens
TOKEN_KEY=<base64-encoded-32-byte-aes-key>

# Scoreboard API
SCOREBOARD_URL=https://platform.acmcyber.com/api/v1

# Google reCAPTCHA v2
RECAPTCHA_SITE_KEY=<your-recaptcha-site-key>
RECAPTCHA_SECRET_KEY=<your-recaptcha-secret-key>
RECAPTCHA_ENABLED=true

# GCP Configuration
GCP_PROJECT=lactf-2026-ctfaas
GCP_ZONE=us-west4-b
VM_IMAGE=projects/lactf-2026-ctfaas/global/images/ctfaas-v1

# Optional: Path to GCP service account credentials
# If not set, uses default application credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Cooldown period (seconds) between instance delete and create
COOLDOWN_SECONDS=60

# Redis configuration (no password, default port 6379)
CONF_REDIS_HOST=redis
CONF_REDIS_PORT=6379
